import customEncryptTransform from "./encrypt.utils";

jest.mock("redux-persist/es/createTransfor");

// Fungsi pengujian untuk enkripsi
test("should encrypt and decrypt text correctly", () => {
  const text = "Hello, World!";
  const encryptedText = customEncryptTransform.in(text);
  const decryptedText = customEncryptTransform.out(encryptedText);

  expect(encryptedText).not.toEqual(text); // Pastikan teks terenkripsi tidak sama dengan teks asli
  expect(decryptedText).toEqual(text); // Pastikan teks terdekripsi sama dengan teks asli
});

// Fungsi pengujian untuk menangani kasus null atau undefined
test("should handle null or undefined values", () => {
  const nullValue = customEncryptTransform.in(null);
  const undefinedValue = customEncryptTransform.in(undefined);
  const decryptedNullValue = customEncryptTransform.out(nullValue);
  const decryptedUndefinedValue = customEncryptTransform.out(undefinedValue);

  expect(nullValue).toBeNull();
  expect(undefinedValue).toBeUndefined();
  expect(decryptedNullValue).toBeNull();
  expect(decryptedUndefinedValue).toBeUndefined();
});
